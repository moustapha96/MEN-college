{% extends 'admin/include/main.html.twig' %}


{# {% titre de l'activite %} #}
{% block title_job %}
	<h1 class="card-title">
		{{ titre }}
	</h1>
{% endblock %}

{#        {% operation possible  %} #}
{% block option %}

	{% for message in app.flashes('success') %}
		<div class="flash-notice alert alert-success">
			{{ message }}
		</div>
	{% endfor %}


	<a href=" {{ path('admin_categories_ajout') }} " class=" m-1 btn btn-info float-right btn-sm" role="button">
		<i class="fa fa-plus" aria-hidden="true"></i>
		nouvelle categorie</a>

{% endblock %}

{#        {% formulaire de creation d'un livre %} #}
{% block data %}
	<div class="logo" style="text-align: center">


		<div class="card-block card-dashboard">
			<table class="table table-striped table-bordered zero-configuration" id="sampleTable" width="100%">
				<thead>
					<tr style="text-align: center;">
						<th>N°Categorie</th>
						<th>Nom</th>
						<th>nombre de livres rattache</th>

						<th>Actions</th>
					</tr>
				</thead>
				<tbody>
					{% for cate in categories %}
						<tr style="text-align: center;">
							<td>{{ cate.id }}</td>
							<td>{{ cate.nom }}</td>

							<td>{{ cate.livres.count() }}</td>
							<td>
								<a href="{{ path('admin_categories_edite',{ "id": cate.id } ) }}" class="btn btn-sm btn-outline-warning">
									<i class="fa fa-edit" aria-hidden="true"></i>
								</a>

								<a href="{{ path('admin_categories_delete',{ "id": cate.id } ) }}" class="btn btn-sm btn-outline-danger">
									<i class="fa fa-trash" aria-hidden="true"></i>
								</a>

							</td>
						</tr>

					{% endfor %}
				</tbody>
				<tfoot>
					<tr style="text-align: center;">
						<th>N°Categorie</th>
						<th>Nom</th>
						<th>nombre de livres rattache</th>

						<th>Actions</th>
					</tr>
				</tfoot>
			</table>
		</div>


	</div>

</div>{% endblock %}
