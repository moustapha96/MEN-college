		{{ titre }}
		=>
		{{ college.nom }}
	</h1>
{% endblock %}

{# {% operation possible %}#}
{% block option %}

	<a class="m-1 btn btn-outline-info float-right ml-1 btn-sm" href="{{ path('admin_college_liste') }}">
		<i class="fa fa-list"></i>
		Liste</a>
