{% extends 'client/include/main.html.twig' %}


{#{% titre de l'activite %}#}
{% block title_job %}
	<h1 class="card-title">{{ app.user.firstName ~' '~app.user.lastName }}</h1>
{% endblock %}

{# {% operation possible %}#}
{% block option %}{% endblock %}

{# {% les donnees affichees %}#}
{% block data %}


	<div class="row">

		<div class="col-md-12">

			<div class="card card-body d-flex align-items-end">

				<b>{{getTitle1()}}</b>

				<b>
					{{getTitle2()}}</b>

			</div>
		</div>

		<div class="col-md-12">
			<div class="card card-body d-flex align-items-start">
				<b>Vos Statistique personnel
				</b>
			</div>
		</div>


		<div class="col-md-6">
			<div class="card">
				<div class="card-body">
					<h3 class="card-title">Collèges</h3>
					<div class="col d-flex justify-content-between align-items-center">
						<h3 class="card-text">{{ colleges|length }}</h3>
						<p class="card-text ml-2">
							<i class="fas fa-archive fa-6x"></i>
						</p>
					</div>
				</div>
			</div>
		</div>


		<div class="col-md-6">
			<div class="card">
				<div class="card-body">
					<h3 class="card-title">Rapports du Collège</h3>
					<div class="col d-flex justify-content-between align-items-center">
						<h3 class="card-text">{{ rapports_college|length }}</h3>


						<p class="card-text ml-2">
							<i class="fas fa-file fa-6x"></i>
						</p>
					</div>
				</div>
			</div>
		</div>

		<div class="col-md-4">
			<div class="card">
				<div class="card-body">
					<h3 class="card-title">Rapports En Attente</h3>
					<div class="col d-flex justify-content-between align-items-center">
						<h3 class="card-text">{{ rapports_en_attente|length }}</h3>


						<p class="card-text ml-2">
							<i class="fas fa-file fa-4x"></i>
						</p>
					</div>
				</div>
			</div>
		</div>
		<div class="col-md-4">
			<div class="card">
				<div class="card-body">
					<h3 class="card-title">Rapports Valider</h3>
					<div class="col d-flex justify-content-between align-items-center">
						<h3 class="card-text">{{ rapports_valider|length }}</h3>


						<p class="card-text ml-2">
							<i class="fas fa-file fa-4x"></i>
						</p>
					</div>
				</div>
			</div>
		</div>

		<div class="col-md-4">
			<div class="card">
				<div class="card-body">
					<h3 class="card-title">Rapports Non Valider</h3>
					<div class="col d-flex justify-content-between align-items-center">
						<h3 class="card-text">{{ rapports_non_valider|length }}</h3>


						<p class="card-text ml-2">
							<i class="fas fa-file fa-4x"></i>
						</p>
					</div>
				</div>
			</div>
		</div>


	</div>


	<div class="row">
		<div class="col-md-12">
			<div class="card card-body d-flex align-items-start">
				<span>
					Statistique Global du Collège
					<b>
						{{ app.user.college.nom is defined ? app.user.college.nom : 'Non Attribué' }}


					</b>
				</span>
			</div>
		</div>


		<div class="col-md-6">
			<div class="card">
				<div class="card-body">
					<h3 class="card-title">Inspecteurs</h3>
					<div class="col d-flex justify-content-between align-items-center">
						<h3 class="card-text">{{ inspecteurs|length }}</h3>
						<p class="card-text ml-2">
							<i class="fas fa-user fa-3x"></i>
						</p>
					</div>
				</div>
			</div>
		</div>


		<div class="col-md-6">
			<div class="card">
				<div class="card-body">
					<h3 class="card-title">Total Rapports
					</h3>
					<div class="col d-flex justify-content-between align-items-center">
						<h3 class="card-text">{{ rapports_colleges|length }}</h3>
						<p class="card-text ml-2">
							<i class="fas fa-file fa-3x"></i>
						</p>
					</div>
				</div>
			</div>
		</div>

		<div class="col-md-4">
			<div class="card">
				<div class="card-body">
					<h3 class="card-title">Rapports en Attente</h3>
					<div class="col d-flex justify-content-between align-items-center">
						<h3 class="card-text">{{ rapports_en_attentes|length }}</h3>
						<p class="card-text ml-2">
							<i class="fas fa-file fa-3x"></i>
						</p>
					</div>
				</div>
			</div>
		</div>

		<div class="col-md-4">
			<div class="card">
				<div class="card-body">
					<h3 class="card-title">Rapports valider</h3>
					<div class="col d-flex justify-content-between align-items-center">
						<h3 class="card-text">{{ rapports_validers|length }}</h3>

						<p class="card-text ml-2">
							<i class="fas fa-file fa-3x"></i>
						</p>
					</div>
				</div>
			</div>
		</div>


		<div class="col-md-4">
			<div class="card">
				<div class="card-body">
					<h3 class="card-title">Rapports non valider</h3>
					<div class="col d-flex justify-content-between align-items-center">
						<h3 class="card-text">{{ rapports_non_validers|length }}</h3>


						<p class="card-text ml-2">
							<i class="fas fa-file fa-3x"></i>
						</p>
					</div>
				</div>
			</div>
		</div>


	</div>

{% endblock %}
