<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
		<meta http-equiv="x-ua-compatible" content="ie=edge">
		<title>{{getName()}}</title>

		<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.11.2/css/all.css">
		<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&display=swap">
		<link rel="stylesheet" href="login/css/mdb.min.css">
		<link rel="stylesheet" href="login/css/style.css">
		<style>
			body,
			html {
				margin: 0;
				padding: 0;
				height: 100%;
			}
			.center-container {
				display: flex;
				justify-content: center;
				align-items: center;
				min-height: 100vh;
				flex-wrap: wrap;
			}
			.centered-element {
				text-align: center;
				padding: 20px;
				border: 1px solid #ccc;
				border-radius: 5px;
				background-color: #f5f5f5;
				width: 100%;
				max-width: 700px;

			}
			.responsive-image {
				max-width: 100%;
				height: auto;
				border-radius: 3%;
			}
			.footer {
				text-align: center;
				padding: 2px;
				background-color: #f5f5f5;
				position: fixed;
				bottom: 0;
				width: 100%;
			}
		</style>
	</head>
	<body>
		<div class="center-container">
			<div class="centered-element">
				<div class="row mb-3 ">
					<div class="row  d-flex justify-content-between ">
						<img src="images/{{getLogo2()}}" style="width: 100px;height: 50px " class="responsive-image" alt="">
						<img src="images/{{getLogo1()}}" style=" height: 55px; width: 150px" class="responsive-image" alt="">
					</div>
					<h5 class="mt-1 ">
						<b>
							{{getTitle1()}}
						</b>

					</h5>


					<h5 class="mt-2">
						<b>
							{{getTitle2()}}</b>

					</h5>
				</div>

				<div class="row">
					{% for label, messages in app.flashes %}
						{% for message in messages %}
							<div class="alert alert-{{ label }}">
								{{ message }}
							</div>
						{% endfor %}
					{% endfor %}

				</div>

				<h3>Nouveau mot de paase</h3>
				{% set tmp = app.session.remove('session_val') %}

				{{ form_start(resetForm) }}
				{{ form_row(resetForm.plainPassword) }}

				{{ form_end(resetForm) }}

				<div class="center">
					<a href="{{ path('app_login') }}">Se connecter</a>
				</div>

			</div>
		</div>
		<!-- Footer -->
		<div class="footer">
			<p>&copy; 2023
				{{getName()}},
				<i class="fas fa-mail-bulk"></i>
				<a href="mailto:{{getEmail()}}">
					{{getEmail()}}
				</a>
				.
				<i class="fa fa-solid fa-phone"></i>
				TEL:
				{{getTel()}}</p>

		</div>


		<script type="text/javascript" src="login/js/mdb.min.js"></script>

		<script type="text/javascript" src="login/js/script.js"></script>
		<script>
			(function () {
'use strict'
const forms = document.querySelectorAll('.requires-validation')
Array.from(forms).forEach(function (form) {
form.addEventListener('submit', function (event) {
if (! form.checkValidity()) {
event.preventDefault()
event.stopPropagation()
}

form.classList.add('was-validated')
}, false)
})
})()
		</script>

	</body>
</html>
