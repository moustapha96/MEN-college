{% extends 'admin/include/main.html.twig' %}


{#{% titre de l'activite %}#}
{% block title_job %}
	<h1 class="card-title">
		{{ titre }}
	</h1>
{% endblock %}

{# {% operation possible %}#}
{% block option %}

	{# {% for label, messages in app.flashes %}
																																																																																	{% for message in messages %}
																																																																																		<div class="alert alert-{{ label }}">{{ message }}</div>
																																																																																	{% endfor %}
																																																																																{% endfor %} #}

	<a href=" {{ path('app_generate_pdf_users') }}" class="m-1 btn btn-info float-right btn-sm" role="button">

		<i class="m-1 fa fa-print" aria-hidden="true"></i>Imprimer
	</a>


	<a href=" {{ path('app_user_new') }}" class="m-1 btn btn-info float-right btn-sm" role="button">
		<i class="m-1 fa fa-plus" aria-hidden="true"></i>
		Ajouter</a>
{% endblock %}

{# {% les donnees affichees %}#}
{% block data %}


	<div class="row">
		<div class="col-12">
			<div class="card card-margin">
				<div class="card-body">
					<div class="row search-body">
						<div class="col-lg-12">
							<div class="search-result">

								<div class="result-body">
									<div class="table-responsive">
										<table class="table widget-26" id="sampleTable">
											<thead>
												<tr>

													<th>Matricule</th>
													<th>Email</th>

													<th>Prenom</th>
													<th>Nom</th>

													<th>Téléphone</th>

													<th>Collège</th>

													<th>Adresse</th>
													<th>Sexe</th>
													<th>Rapports</th>
													<th>Compte</th>
													<th>actions</th>

												</tr>
											</thead>

											<tbody>
												{% for user in users %}
													<tr>
														<td>{{ user.matricule }}</td>
														<td>{{ user.email }}</td>
														<td>{{ user.firstName }}</td>
														<td>{{ user.lastName }}</td>
														<td>{{ user.phone }}</td>
														<td>
															<button type="button" class="btn btn-primary btn-sm" data-toggle="modal" data-target="#modal-{{ user.id }}">{{ user.college.nom }}
															</button>
															<div class="modal fade" id="modal-{{ user.id }}" tabindex="-1" role="dialog" aria-labelledby="modelTitleId" aria-hidden="true">
																<div class="modal-dialog" role="document">
																	<div class="modal-content">
																		<div class="modal-header">
																			<h5 class="modal-title">College</h5>
																			<button type="button" class="close" data-dismiss="modal" aria-label="Close">
																				<span aria-hidden="true">&times;</span>
																			</button>
																		</div>
																		<form method="POST" action="{{ path('app_user_college_update', {'id': user.id} ) }}">
																			<div class="modal-body">
																				<select class="form-control" name="college" id="college">
																					{% for college in colleges %}
																						{% set selected = '' %}
																						{% if college.nom == user.college.nom %}
																							{% set selected = 'selected' %}
																						{% endif %}
																						<option value="{{ college.id }}" {{ selected }}>{{ college.nom }}</option>
																					{% endfor %}
																				</select>
																			</div>
																			<div class="modal-footer">
																				<button type="button" class="btn btn-secondary" data-dismiss="modal">Fermer</button>
																				<button type="submit" class="btn btn-success">Enregistrer</button>
																			</div>
																		</form>
																	</div>
																</div>
															</div>
														</td>

														<td>{{ user.adresse }}</td>
														<td>{{ user.sexe }}</td>

														<td>
															<a href="{{ path('admin_college_rapport_client_show', { 'id' : user.id } ) }}" class="m-1 btn btn-outline-dark" type="button">
																<i class="fa fa-list"></i>
																{{ user.rapports | length }}
															</a>
														</td>


														<td>
															<a href="{{ path('app_user_acount', { 'id' : user.id } ) }}" class="m-1 btn btn-outline-{{ user.enabled ? 'success' : 'danger'}}  " type="button">
																<i class="fa fa-{{ user.enabled ? 'unlock-alt': 'lock' }}" aria-hidden="true"></i>
																{{ user.enabled ? 'Activer': 'Blocker' }}
															</a>
														</td>


														<td>

															<a href="{{ path('app_user_show', { 'id' : user.id } ) }}" class="m-1 btn btn-outline-dark " type="button">
																<i class="fa fa-eye" aria-hidden="true"></i>Détails
															</a>

															<a href="{{ path('app_user_edit', { 'id' : user.id } ) }}" class="m-1 btn btn-outline-info" type="button">
																<i class="fa fa-edit" aria-hidden="true"></i>Editer
															</a>

														</td>
													</tr>
												{% else %}
													<tr>
														<td colspan="17">no records found</td>
													</tr>
												{% endfor %}
											</tbody>

										</table>
									</div>
								</div>
							</div>
						</div>
					</div>

				</div>
			</div>
		</div>

	</div>
{% endblock %}
